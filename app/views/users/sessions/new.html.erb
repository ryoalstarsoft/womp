<div class="fl w-100 pa2 mv5">
	<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'measure center' }) do |f| %>
		<h3 class="mb2">login</h3>
		<%= f.email_field :email, autofocus: true, placeholder: 'email', class: 'w-100 mv3' %>
		<%= f.password_field :password, autocomplete: "off", placeholder: 'password', class: 'w-100 mv3' %>

		<div class="fl w-100 mb4">
			<p class="fl"><%= link_to "forgot password?", new_password_path(resource_name) %></p>
			<%= f.submit "login", class: 'button primary-button fr'%>
		</div>
	<% end %>

	<div class="measure center tc mv4">
		<p>don't have an account? <%= link_to "sign up", new_registration_path(resource_name) %></p>
	</div>

	<div class="tc">
		<% resource_class.omniauth_providers.each do |provider| %>
			<p><%= link_to "sign in with #{provider.to_s.gsub("_oauth2", "")}", omniauth_authorize_path(resource_name, provider) %></p>
		<% end %>
	</div>
</div>
