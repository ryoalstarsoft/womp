<div class="w-100">
	<h3>comments</h3>
	<p class="mb4"><b>customer name:</b> <%= project.user.name.present? ? project.user.name : project.user.email %></p>

	<% if project_type == "ModelingProject" && project.next_version_modeling_project.present? %>
		<p class="tc mb4">new comments are disabled for this project version</p>
	<% else %>
		<div id="js-comment-form">
			<%= render 'admin/comments/form', project_type: project_type, project_id: project_id, project: project %>
		</div>
	<% end %>

  <% if project.comments.present? %>
    <% project.comments.order('created_at desc').each do |comment| %>
      <%= render 'admin/comments/comment', comment: comment %>
    <% end %>
  <% end %>
</div>
